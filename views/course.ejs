<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Admin</title>
        <link
            rel="stylesheet"
            href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
            integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"
            crossorigin="anonymous"
        />
        <style>
            .form-container {
                margin: 2rem;
                width: 80%;
            }
        </style>
    </head>
    <body>
        <div class="form-container">
            <a href="/admin"
                ><svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="32"
                    height="32"
                    fill="currentColor"
                    class="bi bi-arrow-left-circle-fill"
                    viewBox="0 0 16 16"
                >
                    <path
                        d="M8 0a8 8 0 1 0 0 16A8 8 0 0 0 8 0zm3.5 7.5a.5.5 0 0 1 0 1H5.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L5.707 7.5H11.5z"
                    /></svg
            ></a>
            <form method="post" action="/admin/newcourse">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input
                        type="text"
                        name="name"
                        id="name"
                        required
                        placeholder="Enter Name"
                        class="form-control"
                    />
                </div>
                <div class="form-group">
                    <label for="istructor">Instructor</label>
                    <input
                        type="text"
                        name="instructor"
                        id="instructor"
                        required
                        placeholder="Enter Instructor"
                        class="form-control form-control-lg"
                    />
                </div>
                <div class="form-group">
                    <label for="istructor">Number of Students</label>
                    <input
                        type="number"
                        name="students"
                        id="students"
                        required
                        placeholder="Enter Number of Students"
                        class="form-control form-control-lg"
                    />
                </div>
                <div class="phd-container">
                    <div class="form-group">
                        <label for="phd">Phd TA</label>
                        <input
                            type="text"
                            name="phd"
                            id="phd"
                            class="form-control"
                            placeholder="Enter Phd TA"
                        />
                    </div>
                    <button
                        type="button"
                        class="btn-sm btn-secondary phd-btn mb-4"
                    >
                        Add More
                    </button>
                </div>
                <div class="mtech-container">
                    <div class="form-group">
                        <label for="mtech">MTech TA</label>
                        <input
                            type="text"
                            name="mtech"
                            id="mtech"
                            class="form-control"
                            placeholder="Enter MTech TA"
                        />
                    </div>
                    <button
                        type="button"
                        class="btn-sm btn-secondary mtech-btn mb-4"
                    >
                        Add More
                    </button>
                </div>
                <div class="project-container">
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="projectname">Project Name</label>
                            <input
                                type="text"
                                name="projectname"
                                id="projectname"
                                required
                                placeholder="Add Project Name"
                                class="form-control"
                            />
                        </div>
                        <div class="form-group col-md-6">
                            <label for="projectlink">Project Link</label>
                            <input
                                type="url"
                                name="projectlink"
                                id="projectlink"
                                placeholder="Add Project Link"
                                class="form-control"
                            />
                        </div>
                    </div>
                    <button
                        type="button"
                        class="btn-sm btn-secondary project-btn mb-4"
                    >
                        Add Project
                    </button>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
        <script
            src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
            integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
            crossorigin="anonymous"
        ></script>
        <script
            src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js"
            integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
            crossorigin="anonymous"
        ></script>
        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"
            integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
            crossorigin="anonymous"
        ></script>
        <script>
            const phds = document.querySelector(".phd-container");
            const addphdBtn = document.querySelector(".phd-btn");
            const mtechs = document.querySelector(".mtech-container");
            const addmtechBtn = document.querySelector(".mtech-btn");
            const projects = document.querySelector(".project-container");
            const addProjectBtn = document.querySelector(".project-btn");
            const newphd = `
        <div class="alert alert-light form-row alert-dismissible my-0" role="alert">
        <div class="form-group col-md-8">
            <input
            type="text"
            name="phd"
            id="phd"
            class="form-control"
            placeholder="Enter Phd TA"
        />
        <button type="button" class="close justify-self-end" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      </div>
      </div>`;
            const newmtech = `
      <div class="alert alert-light form-row alert-dismissible my-0" role="alert">
      <div class="form-group col-md-8">
          <input
          type="text"
          name="mtech"
          id="mtech"
          class="form-control"
          placeholder="Enter Mtech TA"
      />
      <button type="button" class="close justify-self-end" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    </div>
    </div>`;
            const newProject = `
      <div class="alert alert-light form-row alert-dismissible my-0" role="alert">
      <div class="form-row">
          <div class="form-group col-md-6">
              <input
              type="text"
              name="projectname"
              id="projectname"
              required
              placeholder="Add Project Name"
              class="form-control"
            />
          </div>
          <div class="form-group col-md-6">
              <input
              type="url"
              name="projectlink"
              id="projectlink"
              placeholder="Add Project Link"
              class="form-control"
            />
            <button type="button" class="close justify-self-end" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          </div>
      </div>
    </div>
      `;
            addphdBtn.addEventListener("click", () => {
                phds.insertAdjacentHTML("afterend", newphd);
            });
            addmtechBtn.addEventListener("click", () => {
                mtechs.insertAdjacentHTML("afterend", newmtech);
            });
            addProjectBtn.addEventListener("click", () => {
                projects.insertAdjacentHTML("afterend", newProject);
            });
        </script>
    </body>
</html>
